.container {
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
}
.picture-view{
  display:flex;
  flex-direction:column;
  flex:1;
}
.picture{
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background-color: #545454;
  margin-top:10rpx;
  margin-right:auto;
  margin-left:auto;
  border-color: #ead99f;
  border-width: 6rpx;
  border-style: solid;
}
.input-view{
  margin-left: auto;
  margin-right: auto;
  margin-top: 10rpx;
  color:#323232;
  text-align: center;
  border-color:#f3f3f3;
  border-width:1rpx;
  border-bottom-style:solid;

}
